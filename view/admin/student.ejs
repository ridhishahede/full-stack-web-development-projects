     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
   
     <!-- font awesome link -->
     <script defer src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/js/all.min.js"></script>
   
       <link rel="preconnect" href="https://fonts.googleapis.com">
       <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
       <link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Poppins&family=Raleway&family=Ubuntu&display=swap" rel="stylesheet">


       <style>
        /* Custom Styles */
        body {
    font-family: Montserrat sans-serif;
        }
    
        .Welcome {
          text-align: center;
          margin: 30px 0;
        }
    
        .navbar {
          background-color: #fff;
        }
    
        .table-container {
          overflow-x: auto;
          margin-top: 30px;
        }
    
        .table {
          min-width: 600px;
        }
    
        footer {
          text-align: center;
          margin: 30px 0;
        }
    
        /* Hover Effects */
        .btn-light:hover {
          background-color: #F4F4F4;
        }
    
        .social-icon {
          font-size: 24px;
          margin: 0 5px;
          color: #555;
          transition: color 0.3s;
        }
    
        .social-icon:hover {
          color: #B3005E;
        }
    
        .btn {
        font-size: 18px;
        display: inline-block;
        outline: 0;
        border: 0;
        cursor: pointer;
        will-change: box-shadow,transform;
        background: radial-gradient( 100% 100% at 100% 0%, #DB005B 0%, #B3005E 100% );
        box-shadow: 0px 0.01em 0.01em rgb(45 35 66 / 40%), 0px 0.3em 0.7em -0.01em rgb(45 35 66 / 30%), inset 0px -0.01em 0px rgb(58 65 111 / 50%);
        padding: 0 2em;
        border-radius: 0.3em;
        color: #fff;
        height: 2.6em;
        text-shadow: 0 1px 0 rgb(0 0 0 / 40%);
        transition: box-shadow 0.15s ease, transform 0.15s ease;
        }
    
        .btn:hover {
        box-shadow: 0px 0.1em 0.2em rgb(45 35 66 / 40%), 0px 0.4em 0.7em -0.1em rgb(45 35 66 / 30%), inset 0px -0.1em 0px DB005B;
        transform: translateY(-0.1em);
        }
    
        .btn:active {
        box-shadow: inset 0px 0.1em 0.6em #3c4fe0;
        transform: translateY(0em);
        }
    
        @keyframes bounce {
      0% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-20px);
      }
      100% {
        transform: translateY(0);
      }
    }
    
    .Welcome h1 {
      animation: bounce 2s;
    }
    
    .Welcome {
      text-align: center;
      margin-top: 100px;
    }
    
    .animation-container {
      position: relative;
    }
    
    .animation {
      position: absolute;
      top: 0;
      left: 20px;
      width: 120px;
      height: 120px;
      background-color: #B3005E;
      animation: rotate 5s infinite;
    }
    
    @keyframes rotate {
      0% {
        transform: rotate(0deg);
      }
    
      100% {
        transform: rotate(360deg);
      }
    }
      </style>
    
</head>
<body>

					<div class="animation-container">
						<div class="animation"></div>
					</div>

