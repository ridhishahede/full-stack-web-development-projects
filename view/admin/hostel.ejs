<!DOCTYPE html>
<html>
<head>
  <title>Hostel Details</title>
  <link rel="stylesheet" href="css/mess-styles.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
  <!-- font awesome link -->
	<script defer src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/js/all.min.js"></script>
  <style>
    /* Custom Styles */
    body {
font-family: Montserrat sans-serif;
    }

    .Welcome {
      text-align: center;
      margin: 30px 0;
    }

    .navbar {
      background-color: #fff;
    }

    .table-container {
      overflow-x: auto;
      margin-top: 30px;
    }

    .table {
      min-width: 600px;
    }

    footer {
      text-align: center;
      margin: 30px 0;
    }

    /* Hover Effects */
    .btn-light:hover {
      background-color: #F4F4F4;
    }

    .social-icon {
      font-size: 24px;
      margin: 0 5px;
      color: #555;
      transition: color 0.3s;
    }

    .social-icon:hover {
      color: #B3005E;
    }

    .btn {
    font-size: 18px;
    display: inline-block;
    outline: 0;
    border: 0;
    cursor: pointer;
    will-change: box-shadow,transform;
    background: radial-gradient( 100% 100% at 100% 0%, #DB005B 0%, #B3005E 100% );
    box-shadow: 0px 0.01em 0.01em rgb(45 35 66 / 40%), 0px 0.3em 0.7em -0.01em rgb(45 35 66 / 30%), inset 0px -0.01em 0px rgb(58 65 111 / 50%);
    padding: 0 2em;
    border-radius: 0.3em;
    color: #fff;
    height: 2.6em;
    text-shadow: 0 1px 0 rgb(0 0 0 / 40%);
    transition: box-shadow 0.15s ease, transform 0.15s ease;
    }

    .btn:hover {
    box-shadow: 0px 0.1em 0.2em rgb(45 35 66 / 40%), 0px 0.4em 0.7em -0.1em rgb(45 35 66 / 30%), inset 0px -0.1em 0px DB005B;
    transform: translateY(-0.1em);
    }

    .btn:active {
    box-shadow: inset 0px 0.1em 0.6em #3c4fe0;
    transform: translateY(0em);
    }

    @keyframes bounce {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20px);
  }
  100% {
    transform: translateY(0);
  }
}

.Welcome h1 {
  animation: bounce 2s;
}

.Welcome {
  text-align: center;
  margin-top: 100px;
}

.animation-container {
  position: relative;
}

.animation {
  position: absolute;
  top: 20px;
  left: 20px;
  width: 120px;
  height: 120px;
  background-color: #B3005E;
  animation: rotate 5s infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}
  </style>
</head>
<body>
  <div class="animation-container">
    <div class="animation"></div>
  </div>
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#" style="color: #B3005E;">DreamDorm</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/admin/hadmin.html">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#"></a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#"></a>
          </li>

        </ul>
        <form class="d-flex" role="search">
          <input id="searchInput" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button id="searchButton" class="btn btn-outline-success" type="submit">Search</button>
        </form>
        <div id="searchResults"></div>
      </div>
    </div>
  </nav>

<div class="Welcome">
<h1 style="color: #B3005E;">Welcome to the DreamDorm Portal</h1>
<h2 style="color: #B3005E;">Admin Dashboard</h2>
<p>You are logged in as <strong>[username]</strong></p>
</div>

<div class="container table-container" style="padding:10px 50px 50px 50px; background-color: #9BA4B5; border-radius: 20px;">
<h1 class="mt-5" style="color: #B3005E;">Hostel Details</h1>
<div class="table-responsive">
<table class="table table-dark table-striped table-hover">
  <thead class="thead-dark">
  <table class="table table-striped table-hover">
    <thead class="thread-dark">
      <tr>
        <th scope="col">Hostel Name</th>
        <th scope="col">Address</th>
        <th scope="col">Total Rooms</th>
        <th scope="col">Occupied Rooms</th>
        <th scope="col">Available Rooms</th>
        <th scope="col">Remove</th>
      </tr>
    </thead>
    <tbody>
      <% hostels.forEach(hostel => { %>
        <tr>
          <td><%= hostel.hostelName %></td>
          <td><%= hostel.address %></td>
          <td><%= hostel.totalRooms %></td>
          <td><%= hostel.occupiedRooms %></td>
          <td><%= hostel.availableRooms %></td>
          <td>
            <form action="/admin/hostel/remove" method="POST">
              <input type="hidden" name="id" value="<%= hostel._id %>">
              <button type="submit" class="btn btn-light"><i class="fas fa-trash-alt" style="margin-top: 2px;"></i> Remove</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <button id="addHostelButton" class="btn btn-primary"><i class="fas fa-plus"></i> Add Hostel</button>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/js/all.min.js"></script>
  <script>
    document.getElementById('addHostelButton').addEventListener('click', () => {
      const hostelName = prompt('Enter Hostel Name:');
      const address = prompt('Enter Address:');
      const totalRooms = parseInt(prompt('Enter Total Rooms:'));
      const occupiedRooms = parseInt(prompt('Enter Occupied Rooms:'));
      const availableRooms = parseInt(prompt('Enter Available Rooms:'));

      // Send the hostel data to the server
      fetch('/admin/hostel/add', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          hostelName,
          address,
          totalRooms,
          occupiedRooms,
          availableRooms
        })
      })
      .then(response => response.json())
      .then(data => {
        // Hostel data added successfully
        // Refresh the page to update the table
        location.reload();
      })
      .catch(error => {
        console.error('Error adding hostel:', error);
        alert('Failed to add hostel. Please try again.');
      });
    });
  </script>
  <footer id="footer">
		<i class="social-icon fab fa-facebook icon"></i>
		<i class="social-icon fab fa-twitter icon"></i>
		<i class="social-icon fab fa-instagram icon"></i>
		<i class="social-icon fas fa-envelope icon"></i>
		<p>&copy; 2023 DreamDorm</p>
	</footer>

