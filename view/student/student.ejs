<!-- student.ejs -->

<!DOCTYPE html>
<html>
<head>
  <title>Student Page</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Welcome, Student!</h1>

  <h2>Mess Menu</h2>

  <table>
    <thead>
      <tr>
        <th>Day</th>
        <th>Breakfast Menu</th>
        <th>Lunch Menu</th>
        <th>Snacks Menu</th>
        <th>Dinner Menu</th>
      </tr>
    </thead>
    <tbody>
      <% menus.forEach(menu => { %>
        <tr>
          <td><%= menu.day %></td>
          <td><%= menu.breakfastMenu %></td>
          <td><%= menu.lunchMenu %></td>
          <td><%= menu.snackstMenu %></td>
          <td><%= menu.dinnerMenu %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
